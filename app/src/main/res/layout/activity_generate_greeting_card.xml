<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".GenerateGreetingCard"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/bgselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Background Image"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="casual"/>
            <LinearLayout
                android:id="@+id/bcardbg"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_insert_photo_black_24dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tcardbg"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_insert_photo_black_24dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/gwscardbg"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_insert_photo_black_24dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/atbcardbg"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_insert_photo_black_24dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pcardbg"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_insert_photo_black_24dp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
            </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Photo"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="casual"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/ic_insert_photo_black_24dp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Photo From Gallery"
            android:layout_margin="@dimen/_5sdp"
            android:textStyle="bold"
            android:onClick="openGallery"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a photo and then press Share Greeting Card Button to share your greeting card"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/myView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingTop="@dimen/_2sdp">

        <TextView
            android:id="@+id/greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Happy Birthday"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sample"
            android:onClick="openGallery"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made With"
                android:paddingTop="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/love"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_toEndOf="@+id/with"
                android:src="@drawable/ic_favorite" />
            <TextView
                android:id="@+id/made"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/love"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/khublei"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_toEndOf="@+id/made"
                android:src="@drawable/khublei_hand"
                android:layout_marginLeft="-5dp"/>
            <TextView
                android:id="@+id/khubleiapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khublei App"
                android:layout_toEndOf="@+id/khublei"
                android:paddingTop="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:enabled="false"
        android:id="@+id/shareMyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Greeting Card"
        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="bottom"
        />
</LinearLayout>
</ScrollView>